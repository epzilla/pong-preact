{
  "name": "preact-pong",
  "version": "1.0.0",
  "description": "Ping pong score tracker and stats app written in Preact",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template src/index.html",
    "serve": "preact build --template src/index.html && preact serve",
    "dev": "preact watch --template src/index.html",
    "lint": "eslint src"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-css-transition-group": "^1.3.0",
    "preact-router": "^2.5.7",
    "pug": "^2.0.0-rc.4",
    "qwest": "^4.5.0",
    "react-virtualized-select": "^3.1.3",
    "recharts": "^1.0.0-beta.10",
    "smoothscroll": "^0.4.0"
  }
}